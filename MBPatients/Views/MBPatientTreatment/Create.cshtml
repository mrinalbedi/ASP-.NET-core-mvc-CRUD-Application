@model MBPatients.Models.PatientTreatment

@{
    ViewData["Title"] = "Add a Treatment for " + ViewData["diagnosisName"] + ", Patient: " + ViewData["LastName"] + " , " + ViewData["FirstName"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h4>PatientTreatment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TreatmentId" class="control-label"></label>
                <select asp-for="TreatmentId" class ="form-control" asp-items="ViewBag.TreatmentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DatePrescribed" class="control-label"></label>
                <input asp-for="DatePrescribed" class="form-control" value="@DateTime.Now.ToString("dd MMMM yyyy hh:mm")" disabled/>
                <span asp-validation-for="DatePrescribed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <textarea rows="3" cols="30" asp-for="Comments" class="form-control"></textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="PatientDiagnosisId" class="control-label"></label>
                <select asp-for="PatientDiagnosisId" class ="form-control" asp-items="ViewBag.PatientDiagnosisId"></select>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

