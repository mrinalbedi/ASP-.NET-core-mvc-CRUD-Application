@model IEnumerable<MBPatients.Models.Patient>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Patients On File</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                Patient Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.DateOfDeath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomePhone)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
            <tr>
                @*<td>
                    <a asp-controller="MBPatientDiagnosis" asp-action="Index" asp-route-PatientId="@item.PatientId">
                        @Html.DisplayFor(modelItem => item.PatientId)
                    </a>
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.LastName),@Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                
                <td>
                    @*@Html.DisplayFor(modelItem => item.DateOfBirth)*@
                    @Html.ValueFor(modelItem=>item.DateOfBirth, "{0:dd MMM yyyy}")
                </td>
               
                <td>
                    @*@Html.DisplayFor(modelItem => item.DateOfDeath)*@
                    @if (item.Deceased == true)
                    {
                        @Html.ValueFor(modelItem => item.DateOfDeath, "{0:dd MMM yyyy}")
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomePhone)
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PatientId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PatientId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PatientId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
